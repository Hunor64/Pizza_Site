<Window x:Class="Pizza_Site.PizzaEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Pizza" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Pizza Name" />
            <TextBox x:Name="txtPizzaName" />

            <Label Content="Ingredients" />
            <TextBox x:Name="txtIngredients" />

            <Label Content="Price" />
            <TextBox x:Name="txtPrice" />

            <Button Content="Save" Width="100" Margin="0,10,0,0" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
