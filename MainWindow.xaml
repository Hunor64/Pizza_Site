<Window x:Class="Pizza_Site.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizza_Site"
        mc:Ignorable="d" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800" Background="LightSkyBlue">
    <Grid>
        <!-- Custom title bar start -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnMinimize" Content="_" BorderBrush="Black" Background="LightGoldenrodYellow" Width="30" Height="30" Click="btnMinimize_Click"></Button>
            <Button x:Name="btnMaximize" Content="🗖" BorderBrush="Black" Background="LightGoldenrodYellow" Width="30" Height="30" Click="btnMaximize_Click"></Button>
            <Button x:Name="btnClose" Content="X" BorderBrush="Black" Background="LightGoldenrodYellow" Width="30" Height="30" Click="btnClose_Click"></Button>
        </StackPanel>
        <!-- Custom title bar end -->
        <Grid Grid.Row="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <StackPanel x:Name="MainPanel" Visibility="Visible">
                        <ListView Name="PizzaListView" ItemsSource="{Binding Pizzas}" Style="{DynamicResource ListViewStyle}">
                            <ListView.View>
                                <GridView ColumnHeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}" >
                                    <GridViewColumn Header="Pizza">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="5">
                                                    <Image Source="{Binding ImagePath}" Width="100" Height="100" Margin="5"/>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                                        <TextBlock Text="{Binding Ingredients}" FontStyle="Italic" FontSize="12" Foreground="Gray"/>
                                                        <TextBlock Text="{Binding Price, StringFormat={}{0} Ft}" FontWeight="Bold" FontSize="14" Margin="0,5,0,0"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Mennyiség">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBox Width="50" Text="1" Margin="5"/>
                                                    <Button Content="Rendelés" Tag="{Binding}" Click="OrderButton_Click" Width="75" Margin="5"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                    <StackPanel x:Name="CartPanel" Visibility="Collapsed">
                        <Button Content="Vissza" Click="BackToMain_Click" Width="100" HorizontalAlignment="Left" />
                        <ListView Name="CartListView">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Pizza" DisplayMemberBinding="{Binding Name}" Width="150"/>
                                    <GridViewColumn Header="Mennyiség">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBox Width="50" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                                 TextChanged="QuantityTextBox_TextChanged"/>
                                                    <Button Content="Törlés" Tag="{Binding}" Click="RemoveButton_Click" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Ár" DisplayMemberBinding="{Binding TotalPrice, StringFormat={}{0} Ft}" Width="100"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <TextBlock Name="TotalPriceTextBlock" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right" Margin="10"/>
                        <Button Content="Rendelés véglegesítése" Click="FinalizeOrderButton_Click" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
            <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <Button Name="CartButton" Click="CartButton_Click" Width="30" Height="30" VerticalAlignment="Top">
                    <StackPanel>
                        <Image Source="/Pizza_Site;component/Logo/shopping-cart.png" Width="25" Height="25" />
                        <TextBlock Name="CartItemCount" Text="0" VerticalAlignment="Top" HorizontalAlignment="Right" />
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
