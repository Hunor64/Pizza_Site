<Window x:Class="Pizza_Site.CustomMessageBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pizza_Site"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="400"
      Title="Registration Failed!" Height="150" Width="400">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" Text="Registration Failed! Do you want to Log in or you want to create another account?" FontSize="13" VerticalAlignment="Top" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Button x:Name="btnLogin" Content="Login" Width="75" Click="btnLogin_Click"/>
                <Button x:Name="btnRegister" Content="Register another account" Width="auto" Margin="100,0,0,0" Click="btnRegister_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
